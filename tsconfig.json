{
    "compilerOptions": {
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "allowJs": false,
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "ES2018",
        "forceConsistentCasingInFileNames": true,
        "outDir": "dist",
        "skipLibCheck": true, // workaround for Soylana lib conflict
        "resolveJsonModule": true
    }
}
